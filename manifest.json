{
  "name": "onTwitter",
  "version": "1.0",
  "description": "See what the people you are following have said about any site",
  "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": {
      "32": "images/twitter.png"
    }
  },
  "options_page": "options.html",
  "manifest_version": 2
}
